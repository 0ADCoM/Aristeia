<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/flame.png</texture>
    <blend mode="add"/>

    <start_full/>

    <constant name="emissionrate" value="20.0"/>
    <uniform name="lifetime" min="5.0" max="5.5"/>

    <uniform name="angle" min="-0.5" max="0.5"/>

    <uniform name="velocity.x" min="0" max="0"/>
    <uniform name="velocity.y" min="6" max="6"/>
    <uniform name="velocity.z" min="0" max="0"/>
    <uniform name="velocity.angle" min="0" max="0"/>

    <uniform name="size" min="1.0" max="1.0"/>

    <uniform name="color.r" min="0.9" max="1.0"/>
    <copy name="color.g" min="0.9" max="1.0"/>
    <copy name="color.b" from="color.r"/>

</particles>
